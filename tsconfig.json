{
	"include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["./cypress/**/*.ts"],
	"compilerOptions": {
		"types": ["vitest/globals"],
		"lib": ["DOM", "DOM.Iterable", "ES2021"],
		"module": "commonjs",
		"target": "ES2021",
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		},
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true
	}
}
