{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"lib": ["es6"],
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/__tests__"
	]
}
